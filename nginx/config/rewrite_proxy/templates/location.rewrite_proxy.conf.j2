location {{ nginx_config_rewrite_proxy__location }} {
    rewrite ^{{ nginx_config_rewrite_proxy__location }}/(.*) /$1 break;

    try_files $uri {{ nginx_config_rewrite_proxy__proxy_location }};
{% if nginx_config_rewrite_proxy__root is defined and nginx_config_rewrite_proxy__root != "" %}
    root {{ nginx_config_rewrite_proxy__root }};
{% endif %}
}

location {{ nginx_config_rewrite_proxy__proxy_location }} {
    proxy_pass     {{ nginx_config_rewrite_proxy__proxy_pass }};
{% if nginx_config_rewrite_proxy__proxy_redirect != "" %}
    proxy_redirect {{ nginx_config_rewrite_proxy__proxy_redirect }}";
{% endif %}
}
